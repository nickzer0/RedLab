    "iso_url": "https://software.download.prss.microsoft.com/db/Win10_21H1_English_x64.iso?t=6cb0b5c6-ada0-4213-a358-88c3cb91c584&e=1645096401&h=02cdbbec368dac95d1e7aa5b1a436bbcd99c2bf4a6408f9c2cbac700cfd01094",
    "autounattend": "./packer/answer_files/10/Autounattend.xml"
